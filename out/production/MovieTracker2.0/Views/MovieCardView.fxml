      <Button fx:id="addToWatchListButton" mnemonicParsing="false" onAction="#handleAddToWatchListButtonClick" prefHeight="60.0" prefWidth="150.0" text="Add to WatchList" />
      <Button fx:id="addToFavouritesButton" mnemonicParsing="false" onAction="#handleAddToFavouritesButtonClick" prefHeight="26.0" prefWidth="150.0" text=":Heart:" />
